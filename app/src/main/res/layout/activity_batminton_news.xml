<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#031716"
    tools:context=".BatmintonNews">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="83dp"
        android:layout_height="87dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="cursive"
        android:text="M News"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:text="Knows Everything"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="596dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#0C969C"
                app:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="101dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="20dp"
                    android:text="Satwiksairaj Rankireddy-Chirag Shetty Withdraw From Syed Modi International"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="207dp"
                    android:layout_height="229dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    app:srcCompat="@drawable/bat" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="100dp"
                    android:text="India's star men's doubles pair of Satwiksairaj Rankireddy and Chirag Shetty on Tuesday withdrew from the Syed Modi International Super 300 badminton tournament."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="245dp"
                    android:text="India’s premier men’s doubles pair, Satwiksairaj Rankireddy and Chirag Shetty, withdrew from the Syed Modi International Super 300 badminton tournament on Tuesday.

The former world No. 1 doubles pair, who entered the tournament as favourites, was set to face China’s Chen Xu Jun and Guo Ruo Han in the first round. However, the Indian pair gave a walkover to the Chinese duo, the reason for the withdrawal is unknown.

The Indian men’s doubles pair had previously lost their semifinal match at the China Masters to South Korea’s Jin Yong and Seo Seung Jae, 18-21, 21-14, 16-21. It was Satwik and Chirag’s first tournament since a disappointing campaign at the Paris Olympics, which was affected by a shoulder injury to Satwik that kept the pair out of action."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>